<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="default" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <non-jta-data-source>DefaultDS</non-jta-data-source>

        <class>models.CustomerVerifyCode</class>
        <class>models.Parameter</class>

        <class>models.Customer</class>
        <class>models.CustomerGesture</class>
        <class>models.CustomerSession</class>
        <class>models.LoginHistory</class>

        <class>models.BaseAccount</class>
        <class>models.HoldCapital</class>
        <class>models.SubAccount</class>
        <class>models.PrdAccountConfig</class>

        <class>models.Trade</class>

        <class>models.Bank</class>
        <class>models.BankCard</class>
        <class>models.Fund</class>
        <class>models.FundHistory</class>
        <class>models.OpenAccountPact</class>
        <class>models.ProductManage</class>
        <class>models.ProductRecommend</class>

        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL9Dialect"/>
        </properties>
    </persistence-unit>

</persistence>