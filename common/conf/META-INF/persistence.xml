<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="default" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <non-jta-data-source>DefaultDS</non-jta-data-source>
        <class>models.LoggingEvent</class>
        <class>models.LoggingEventException</class>
        <class>models.LoggingEventProperty</class>
        <class>models.CheckError</class>
        <class>models.CheckInfo</class>
        <class>models.CheckResult</class>
        <class>models.ProductAttention</class>

        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL9Dialect"/>
            <property name="hibernate.connection.url" value="jdbc:postgresql://192.168.0.88:5432/devsunlights"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="sunlights"/>
            <property name="hibernate.connection.password" value="sunlights"/>
        </properties>
    </persistence-unit>

</persistence>